        }
        
        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: #667eea;
            margin-bottom: 10px;
        }
        
        .stat-label {
            color: #666;
            font-size: 1rem;
        }
        
        /* 联系区域 */
        .contact-section {
            background: #f8f9fa;
            padding: 40px;
            border-radius: 15px;
            text-align: center;
        }
        
        .contact-links {
