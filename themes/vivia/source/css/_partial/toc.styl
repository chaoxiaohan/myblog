.toc-widget
  margin-bottom: block-margin

.toc-title
  color: var(--widget-title)
  font-size: 20px
  font-weight: bold
  margin-bottom: 12px
  transition: color trans-style
  display: flex
  &:before
    content: ''
    display: block
    height: 14px
    width: 4px
    border-radius: 2px
    background-color: var(--primary)
    margin-right: 10px
    margin-top: 4px
    margin-left: -4px

.toc-content
  @extend $card
  color: color-sidebar-text
  padding: 20px 0 20px 20px
  overflow-y: auto
  overflow-x: hidden
  max-height: 60vh
  a
    color: var(--link)
    text-decoration: none
    font-size: 16px
  
  // 自定义滚动条样式
  &::-webkit-scrollbar
    width: 4px
    
  &::-webkit-scrollbar-track
    background: transparent
    
  &::-webkit-scrollbar-thumb
    background: var(--neut-L30)
    border-radius: 2px
    
    &:hover
      background: var(--neut-L50)
  
  // Firefox 滚动条样式
  scrollbar-width: thin
  scrollbar-color: var(--neut-L30) transparent

.toc-list
  list-style: none
  padding: 0
  margin: 0

  ol
    list-style: none
    padding-left: 1.2rem
    margin: 0.3rem 0

  li
    margin: 0.2rem 0
    
  a
    height: 40px
    display: flex
    align-items: center
    justify-content: space-between
    color: var(--btn-text-neutral-text) !important
    font-weight: medium
    border-radius: inner-radius
    padding-left: 8px
    padding-right: 8px
    transition: background trans-style, color trans-style, padding trans-style
    text-decoration: none
    
    &:hover
      padding-left: 12px
      background: var(--btn-text-hover)
      color: var(--btn-text-light-text) !important
      
    &.active
      background: var(--btn-text-active)
      color: var(--btn-text-content) !important
      font-weight: medium
      padding-left: 12px

  .toc-number
    color: var(--neut-L50)
    margin-right: 0.5rem
    font-size: 0.85rem

// 不同层级的缩进和样式
.toc-list
  .toc-level-1 > a
    font-weight: 500
    
  .toc-level-2 > a
    font-size: 15px
    padding-left: 24px
    
    &:hover, &.active
      padding-left: 28px
    
  .toc-level-3 > a
    font-size: 14px
    padding-left: 36px
    opacity: 0.8
    
    &:hover, &.active
      padding-left: 40px
    
  .toc-level-4,
  .toc-level-5,
  .toc-level-6
    > a
      font-size: 13px
      padding-left: 48px
      opacity: 0.7
      
      &:hover, &.active
        padding-left: 52px

// 响应式设计
@media (max-width: 768px)
  .toc-widget
    display: none
